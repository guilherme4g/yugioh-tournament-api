{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2021",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "plugins": [{
      "transform": "ts-auto-mock/transformer",
      "cacheBetweenTests": false
    }
  ],
  },
  "include": ["src", "tests"],
  "exclude": []
}